<div class="mb-3 mt-3">
    <h2>
        <%= @post.title %>
    </h2>
</div>

<div class="container-fluid">
    <%= @post.body %>
</div>
<br/>
<div class="container-fluid">
    <%= link_to "Edit", edit_post_path(@post), class:"btn btn-secondary mx-1" %>
    <%= link_to "Delete", post_path(@post),method: :delete, class:"btn btn-outline-secondary mx-1" %>
</div>
<hr>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>

    <div class="container-fluid mt-2 mb-2">
        <p>
            <%= comment.body %>
        </p>
    </div>
    <hr>
    
<% end %>

<h3>Add Comment</h3>
<%= form_with(model: [@post, @post.comments.build]) do |form| %>
    <p>
        <%= form.text_area :body,class:"form-control", placeholder:"Comment ...",style: "height: 100px" %>
    </p>
    <div class="mb-3">
        <%= form.submit "Comment", class: "btn btn-secondary" %>
    </div>
<% end %>

