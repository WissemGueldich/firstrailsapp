<div class="mb-3 mt-3">
    <h1>Blog posts</h1>
</div>
<div class="overflow-scroll" style="height: 100vh">
    <% @posts.each do |post| %>
        <div  class="border border-dark border-4 pb-3 px-2 rounded-3" >
            <div class="mb-3 mt-3">
                <h2>
                    <%= post.title %>
                </h2>
            </div>

            <div class="container-fluid mt-2 mb-2">
                <h5>
                    <%= post.body %>
                </h5>
            </div>
            <div class="container-fluid mt-2 mb-2">
                    <%= link_to "Read more", post_path(post), class:"btn btn-secondary" %>
            </div>
        </div>
        <br/><br/>
    <% end %>
</div>
